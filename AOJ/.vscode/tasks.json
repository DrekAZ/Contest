{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    //"command": "g++",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-O2",
                "${fileBasename}",
                "-o",
                "${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
    //"isShellCommand": true,
    //"showOutput": "always",
    //"args":["-o","${fileBasenameNoExtension}","${file}","&","${fileBasenameNoExtension}.exe"],
    //"isBuildCommand": true
    
}